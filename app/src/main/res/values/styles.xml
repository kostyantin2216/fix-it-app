<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grey_500</item>
        <item name="colorControlActivated">@color/gold</item>
    </style>

    <!-- LISTS START -->
    <style name="li_tradesman" parent="listItem">
        <item name="android:background">@drawable/list_item_bg_transparent_white</item>
    </style>
    
    <style name="li_tradesman_company_name">
        <item name="android:textSize">@dimen/extra_large_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- LISTS END -->

</resources>
