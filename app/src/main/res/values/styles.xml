<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/white</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#000</item>
        <item name="colorControlActivated">@color/gold</item>
    </style>

    <style name="EditTextTheme">
        <item name="colorControlNormal">@color/grey_400</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorError</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="expandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">26sp
        </item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>

        <item name="android:background">@color/transparent_black_40</item>
    </style>

    <style name="collapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- COMPONENTS START -->

    <style name="toolbar_title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableStart">@drawable/ic_yellow_logo_white_border</item>
        <item name="android:drawablePadding">12dp</item>
    </style>

    <style name="rounded_button" parent="button">
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <style name="rounded_dark_button" parent="button">
        <item name="android:background">@drawable/rounded_dark_button</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
    </style>

    <!-- COMPONENTS END -->

    <!-- LISTS START -->
    <style name="li_tradesman" parent="listItem">
        <item name="android:background">@drawable/list_item_bg_transparent_white</item>
    </style>
    
    <style name="li_tradesman_company_name">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="toolbar_search">
        <item name="android:drawableStart">@drawable/ic_search_white_24dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- LISTS END -->

    <style name="errorFragmentText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="errorFragmentButton">
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="emptyListText">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center|top</item>
        <item name="android:padding">@dimen/empty_list_padding</item>
    </style>

    <style name="standard_progress">

    </style>

    <style name="dark_bg_title_text">
        <item name="android:textSize">@dimen/extra_large_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="dark_bg_content_text">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="list">
        <item name="android:padding">@dimen/list_padding</item>
    </style>

    <style name="listItem">
        <item name="android:layout_margin">@dimen/list_padding</item>
    </style>

    <style name="horizontal_divider">
        <item name="android:background">@color/grey_400</item>
    </style>

</resources>
