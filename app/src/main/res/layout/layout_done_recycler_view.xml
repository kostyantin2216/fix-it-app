<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:clickable="true"
        android:orientation="vertical">

        <!-- Toolbar might be added here programmatically -->

        <include layout="@layout/layout_content_recycler_list" />

    </LinearLayout>

    <com.fixit.ui.components.FloatingTextButton
        android:id="@+id/fab_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_gravity="bottom|end"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:buttonColor="@color/colorButton"
        app:buttonIcon="@drawable/ic_check_white_24dp"
        app:buttonText="@string/complete"
        app:buttonTextColor="@android:color/white" />

</FrameLayout>