<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="errorFragmentText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="errorFragmentButton">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="emptyListText">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center|top</item>
        <item name="android:padding">@dimen/empty_list_padding</item>
    </style>

    <style name="list">
        <item name="android:padding">@dimen/list_padding</item>
    </style>

    <style name="listItem">
        <item name="android:layout_margin">@dimen/list_padding</item>
    </style>

    <style name="horizontal_divider">
        <item name="android:background">@color/grey_400</item>
    </style>

</resources>